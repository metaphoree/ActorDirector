@{
    ViewBag.Title = "Confirm Email Address Sent";
}


<div class="container-fluid" @*style="background-color: #BA68C8;"*@>
    <div class="container">

        <div class="row">
            <div class="col-md-2"></div>
            <div class="col-md-8" style="padding: 50px 0px;">
                <div style="border: 0px solid #4A148C; border-radius:3px; background: #fff;">
                    <div style="color:#fff; text-align: center; padding: 15px 0px; font-weight: bold;" class="schemaBGColor megaLargeText textBold">Confirm Email Address Sent</div>
                    <div style="padding: 15px 10px 15px 10px;">
                        <div class="form-group">
                            <p>
                                Please check your Email Inbox, a confirm Email is Sent to @ViewBag.Email
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-2"></div>
    </div>

</div>