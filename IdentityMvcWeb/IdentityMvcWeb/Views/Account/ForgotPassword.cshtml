@model IdentityMvcWeb.ForgotPasswordViewModel
@{
    ViewBag.Title = "Forgot your password?";
}

<div class="container-fluid" @*style="background-color: #BA68C8;"*@>


    @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        <div class="container">

            <div class="row">
                <div class="col-md-2"></div>
                <div class="col-md-8" style="padding: 50px 0px;">
                    @Html.AntiForgeryToken()
                    <div style="border: 0px solid #4A148C; border-radius:3px; background: #fff;">
                        <div style="color:#fff; text-align: center; padding: 15px 0px; font-weight: bold;" class="schemaBGColor megaLargeText textBold">Reset Password</div>
                        @Html.ValidationSummary("", new { @class = "alert" })
                        <div style="padding: 15px 10px 15px 10px;">
                            <div class="form-group">
                                @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
                                <div class="col-md-10">
                                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "Email Address" })
                                </div>
                            </div>
                        </div>
                        <div style="padding: 15px 10px 15px 10px;">
                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" class="btn btn-default" value="Email Link" />
                                </div>
                            </div>
                        </div>
                    </div>
                    <div style="text-align: center; padding: 15px 0px; font-weight: bold;" class="schemaBGColor megaLargeText textBold">Welcome Online Medical World</div>
                </div>
                <div class="col-md-2"></div>
            </div>
            
        </div>

    }
    </div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
