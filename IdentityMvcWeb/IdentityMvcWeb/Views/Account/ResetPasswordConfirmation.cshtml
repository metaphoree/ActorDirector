@{
    ViewBag.Title = "Reset password confirmation";
}

<div class="container-fluid" @*style="background-color: #BA68C8;"*@>
    <div class="container">

        <div class="row">
            <div class="col-md-2"></div>
            <div class="col-md-8" style="padding: 50px 0px;">
                <div style="border: 0px solid #4A148C; border-radius:3px; background: #fff;">
                    <div style="color:#fff; text-align: center; padding: 15px 0px; font-weight: bold;" class="schemaBGColor megaLargeText textBold">Reset password confirmation</div>
                    <div style="padding: 15px 10px 15px 10px;">
                        <div class="form-group">
                            <p>
                                Your password has been reset. Please @Html.ActionLink("click here to log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-2"></div>
    </div>

</div>
